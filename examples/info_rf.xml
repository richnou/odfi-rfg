<?xml version="1.0"?>
<regroot name="info_rf">																<!-- a regroot is a second hierarchy level in RF -->
	<reg64 name="driver">												<!-- a 64 Bit register accessable with a unique address -->
		<hwreg name="ver" desc="Driver version for software" width="32" sw="ro" hw="r" reset="32'd18253" />	<!-- a field inside a 64 Bit register -->
	</reg64>
	<reg64 name="node">													<!-- a 64 Bit register accessable with a unique address -->
		<hwreg name="guid" width="24" sw="rw" hw="ro" reset="24'h12abcd" />
		<hwreg name="id" width="16" sw="rw" hw="ro" sw_written="2"  reset="16'h0" />
		<hwreg name="vpids" width="16" sw="ro" hw="r" reset="NUM_VPIDS" />
		#ifdef ASIC
			<hwreg name="counter" counter="1" width="64" sw="rw" hw="rw" hw_wen="1"/>
#else
			<hwreg name="counter" counter="1" width="48" sw="rw" hw="rw" hw_wen="1"/>
#endif
	</reg64>
	<repeat loop="8" name="scratchpad">
		<reg64 name="scratchpad" desc="This register is one entry of the 64 byte scratchpad space offered by EXTOLL.">
			<hwreg name="data" width="64" sw="rw" hw="r" reset="64'h0" desc="Scratchpad data."/>
		</reg64>
	</repeat>
</regroot>

