## Create Register File
osys::rfg::registerFile "extoll_rf" {
	group "info_rf" {       
        register driver {
            field ver {
                description "Driver version for software"
                width 32
                reset 32'd18253
            }
        }    
        group "info_rf_subgroup1" {
            register subregister1 {
                field subfield1 {
                    width 32
                    reset 32'h0
                }            
            }
            register subregister2 {
                field subfield2 {
                    width 32
                    reset 32'h0
                }            
            }
        }  
    }
    aligner 6 
    register r1 {
        field ver {
            description "r1 Register"
            width 32
            reset 32'd18253
        }
    }
    registerFile "subregister_file" {
        register r2 {
            field ver {
                description "r2 Register"
                width 32
                reset 32'd18253
            }
        } 
        register r3 {
            field ver {
                description "r3 Register"
                width 32
                reset 32'd18253
            }
        }     
    }
}
