osys::rfg::registerFile RF {
    
    checker 8 {

        group info_Group {
            
            register info_register {
                
                field ID {
                    description "unique ID"
                    width 32
                    reset 32'h12abcd
                    software ro
                }

                field GUID {
                    description "generic user ID"
                    width 32
                    reset 32'h0
                    software ro
                    hardware wo
                }

            }

        }

    }

    aligner 8

    group GPR_Group {
        ::repeat 16 {
            register GPR_$i {
                field GPF {
                    description "General purpose field"
                    width 64
                    reset 64'h0
                    software rw
                    hardware {
                        rw
                        software_written 1
                        hardware_wen
                    } 
                }
            }
        }
    }

    group RAM_Group {
        ramBlock RAM {
            description "a 16 bit wide RAM with 256 entries"
            width 16
            depth 256 
            software rw
            hardware rw
        }
    }
}